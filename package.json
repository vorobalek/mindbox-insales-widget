{
  "name": "mindbox-insales-widget",
  "version": "1.0.1",
  "private": true,
  "description": "Mindbox widget for inSales",
  "packageManager": "npm@11.11.0",
  "scripts": {
    "prepare": "husky",
    "commitlint": "commitlint --from HEAD~1 --to HEAD",
    "typecheck": "tsc --project tsconfig.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build:bundle": "vite build && node scripts/apply-widget-version.mjs",
    "build": "npm run typecheck && npm run build:bundle",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e:install": "playwright install chromium",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --project=chromium --headed"
  },
  "lint-staged": {
    "*.{ts,js,mjs,cjs,json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{ts,js,mjs,cjs}": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=24.14.0",
    "npm": ">=11.9.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@eslint/js": "^9.39.3",
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.3.2",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "@vitest/coverage-v8": "^4.0.18",
    "browserslist": "^4.28.0",
    "browserslist-to-esbuild": "^2.1.1",
    "eslint": "^9.39.3",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "liquidjs": "^10.24.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
